<style>
    .hero {
      min-height: calc(100vh - 100px);

      @media (width >= 768px) {
        padding-block: 129px;
      }

      & > div {
        position: relative;
        margin-inline: auto;
        text-align: left;
        padding: 10vw 2vw;
        overflow: hidden;

        & > * + *:not(canvas) {
          margin-top: 24px;
        }

        & p {
          font-size: 1.25rem;
          color: var(--text-description-color);

          @media (width >= 768px) {
            font-size: 1.5rem;
          }f

          > strong {
            color: var(--text-color);
          }
        }

        & .button-container {
          display: flex;
          justify-content: center;
          flex-direction: column;
          gap: 13px;

          @media (width >= 768px) {
            flex-direction: row;
          }
        }
      }
    }
  </style>

  
<style>
  main {
    max-width: 1054px;
    margin-inline: auto;
    padding-inline: var(--mobile-inline-padding);
    @media (width >= 1200px) {
      padding-inline: 0;
    }
  }
</style>
